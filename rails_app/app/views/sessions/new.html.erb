<div class="form-box">
  <h1 class="box-header">ログイン</h1>

  <%= form_with url: login_path, class: 'form' do |f| %>
    <!-- エラー -->
    <% if @errors.present? %>
      <ul class='alert'>
        <% @errors.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    <% end %>

    <div class='form-row'>
      <%= f.label :user_id, 'ユーザーID' %>
      <%= f.text_field :user_id, placeholder: 'user id' %>
    </div>

    <div class='form-row'>
      <%= f.label :password, 'パスワード' %>
      <%= f.password_field :password, placeholder: 'password' %>
    </div>

    <p class='form-actions'>
      <%= f.submit 'ログイン' %>
      <%= link_to 'ユーザー登録', register_path, class: 'form-link' %>
    </p>
  <% end %>
</div>
